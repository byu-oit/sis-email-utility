{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": false,
    "removeComments": false,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false
}
